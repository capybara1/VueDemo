(let*
  (
    (theInFilePath "public/logo_512.svg")
    (theOutFilePath "public/favicon.ico")
    (theImage
      (car
        (file-svg-load
          RUN-NONINTERACTIVE
          theInFilePath
          theInFilePath
          90
          64
          64
          2
        )
      )
    )
    (theDrawable
      (car
        (gimp-image-active-drawable theImage)
      )
    )
    (theLayer64
      (vector-ref
        (cadr
          (gimp-image-get-layers theImage)
        )
        0
      )
    )
    (theLayer48
      (car
        (gimp-layer-copy
          theLayer64
          TRUE
        )
      )
    )
    (theLayer32
      (car
        (gimp-layer-copy
          theLayer64
          TRUE
        )
      )
    )
    (theLayer24
      (car
        (gimp-layer-copy
          theLayer64
          TRUE
        )
      )
    )
    (theLayer16
      (car
        (gimp-layer-copy
          theLayer64
          TRUE
        )
      )
    )
  ) ;end of our local variables
  (gimp-image-add-layer
    theImage
    theLayer48
    0
  )
  (gimp-image-add-layer
    theImage
    theLayer32
    0
  )
  (gimp-image-add-layer
    theImage
    theLayer24
    0
  )
  (gimp-image-add-layer
    theImage
    theLayer16
    0
  )
  (gimp-layer-scale
    theLayer48
    48
    48
    TRUE
  )
  (gimp-layer-scale
    theLayer32
    32
    32
    TRUE
  )
  (gimp-layer-scale
    theLayer24
    24
    24
    TRUE
  )
  (gimp-layer-scale
    theLayer16
    16
    16
    TRUE
  )
  (file-ico-save
    RUN-NONINTERACTIVE
    theImage
    theDrawable
    theOutFilePath
    theOutFilePath
  )
  (gimp-quit FALSE)
)
